{ 
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },

  "rules": {
    "no-const-assign": 2,
    "no-undef": 2,
    "no-use-before-define": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-unreachable": 2,
    "no-self-assign": 2,
    "no-redeclare": 2,
    "no-this-before-super": 2,
    "valid-typeof": 2,

    "no-template-curly-in-string": 1,
    "no-unused-vars": 1,
    "no-var": 1,
    "prefer-const": 1,
    "eqeqeq": 1,
    "no-floating-decimal": 1,
    "no-unmodified-loop-condition": 1,
    "no-constant-condition": 1,
    "no-extra-semi": 1,
    "no-extra-bind": 1
  }
}