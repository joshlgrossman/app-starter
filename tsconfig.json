{

  "compilerOptions": {
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "rootDir": "./src"
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "node_modules/@types"
  ]

}